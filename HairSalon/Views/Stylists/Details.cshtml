@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h3>About this Stylist</h3>

<h3>@Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.DateHired): @Html.DisplayFor(model => model.DateHired)</h3>
<h3>Clients:</h3>
<ul>
  @if (@Model.Clients.Count == 0)
  {
    <h4>Sorry, this stylist has no current clients.</h4>
  }
  @foreach (Client client in @Model.Clients)
  {
    <li>@client.Name</li>
  }
</ul>
