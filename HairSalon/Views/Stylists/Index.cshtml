@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<div>
<h1>Current Stylists</h1>


  @foreach(Stylist stylist in Model)
  {
    <h3>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</h3>
  }

@if (@Model.Count == 0)
{
  <h3>No stylists have been Added. Please add some stylists.</h3>
}
</div>